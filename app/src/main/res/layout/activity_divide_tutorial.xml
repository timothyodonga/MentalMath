<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.timothyodonga.mentalmath.DivideTutorial">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginLeft="8dp"
        android:text="To divide a number by 5, perform these operations (in any order):"
        android:textColor="@color/colorText"
        android:textSize="32sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="1. Double the number"
        android:textColor="@color/colorText"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="2. Divide by 10"
        android:textColor="@color/colorText"
        android:textSize="24sp" />
    <Button
        android:id="@+id/divide_tutorial_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBackButton"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="8dp"
        android:text="Back"
        android:textSize="16sp"/>


</LinearLayout>
