<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.timothyodonga.mentalmath.DividePractice">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Solve these problems in 20 seconds:"
        android:textColor="@color/colorText"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="235 / 5 = "
            android:textColor="@color/colorText"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/answer_1_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter a your answer here"
            android:textColor="@color/colorText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1140 / 5 = "
            android:textColor="@color/colorText"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/answer_2_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter a your answer here"
            android:textColor="@color/colorText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2345 / 5 = "
            android:textColor="@color/colorText"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/answer_3_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter a your answer here"
            android:textColor="@color/colorText" />
    </LinearLayout>

    <Button
        android:id="@+id/divide_answers_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorSubmitButton"
        android:layout_margin="8dp"
        android:text="Submit"
        android:textColor="@color/colorText"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/divide_report_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Press Submit when done"
        android:textColor="@color/colorText"
        android:textSize="16sp" />


    <Button
        android:id="@+id/divide_practice_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBackButton"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="88dp"
        android:text="Back"
        android:textColor="@color/colorText"
        android:textSize="16sp" />

</LinearLayout>
